<?xml version="1.0" encoding="UTF-8"?>

<Defs>

  <!--____Iconoclast Armor____-->

  <!--__Heavy Construction Clear__-->

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>Apparel_HeavyConstructionGear</defName>
    <label>Heavy Construction Gear</label>
    <description>Iconoclast Armor. The revolution has begun! So wear this Heavy Construction Gear from Hephaestos and survive the worst dissident attacks.</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>Research_Starting</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>FabricationBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Apparel/IconoclastArmor/OWHeavy</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>1.3</drawSize>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>65000</WorkToMake>
      <MaxHitPoints>340</MaxHitPoints>
      <Mass>12</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>0.6</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Heat>0.5</ArmorRating_Heat>
      <Insulation_Cold>5</Insulation_Cold>
      <Insulation_Heat>5</Insulation_Heat>
      <EquipDelay>3</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.3</MoveSpeed>
      <VacuumResistance MayRequire="Ludeon.RimWorld.Odyssey">0.69</VacuumResistance>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>HiTechArmor</li>
      <li>Armor</li>
    </tradeTags>
    <costList>
      <ComponentIndustrial>5</ComponentIndustrial>
      <Steel>135</Steel>
    </costList>
    <apparel>
      <drawData>
        <dataNorth>
          <layer>78</layer>
        </dataNorth>
        <dataSouth>
          <layer>78</layer>
        </dataSouth>
        <dataEast>
          <layer>78</layer>
        </dataEast>
        <dataWest>
          <layer>78</layer>
        </dataWest>
      </drawData>
      <tags>
        <li>SpacerMilitary</li>
      </tags>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Apparel/IconoclastArmor/OWHeavy</wornGraphicPath>
      <useWornGraphicMask>true</useWornGraphicMask>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <soundWear>Wear_PowerArmor</soundWear>
      <soundRemove>Remove_PowerArmor</soundRemove>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.9,0.9,0.9)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="CompProperties_Biocodable"/>
    </comps>
    <thingSetMakerTags>
      <li>RewardStandardHighFreq</li>
    </thingSetMakerTags>
  </ThingDef>

