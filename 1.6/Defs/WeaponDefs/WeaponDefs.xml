<?xml version="1.0" encoding="UTF-8"?>


<Defs>

<!--____Assault Rifles____-->

<!--__Assault Rifle__-->

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Weapon_AssaultRifle</defName>
    <label>Assault Rifle</label>
    <techLevel>Spacer</techLevel>
    <description>Can't decide on what weapon characteristics are most important to you? Forget to switch weapons during a fight? This T and L assault rifle is for you. It's always a good choice.</description>
    <graphicData>
      <texPath>Weapons/ARifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.8</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.66</AccuracyTouch>
      <AccuracyShort>0.77</AccuracyShort>
      <AccuracyMedium>0.72</AccuracyMedium>
      <AccuracyLong>0.61</AccuracyLong>
      <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>15</equippedAngleOffset>
    <costList>
      <Steel>50</Steel>
      <ComponentIndustrial>5</ComponentIndustrial>
    </costList>
    <weaponTags>
      <li>Weapon_AssaultRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Projectile_ArifleBullet</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>30.9</range>
        <burstShotCount>10</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>Shot_AssaultRifle</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Styleable"/>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Projectile_ArifleBullet</defName>
    <label>Assault Rifle Bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>70</speed>
      <armorPenetrationBase>0.20</armorPenetrationBase>
    </projectile>
  </ThingDef>

