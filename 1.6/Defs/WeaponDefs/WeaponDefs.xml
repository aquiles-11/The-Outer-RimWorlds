<?xml version="1.0" encoding="UTF-8"?>


<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Weapon_ARifle</defName>
    <label>Assault Rifle</label>
    <techLevel>Spacer</techLevel>
    <description>A darned good assault rifle from T and L, improved for use by (or on) Iconoclasts.</description>
    <graphicData>
      <texPath>Weapons/ARifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.8</drawSize>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <skillRequirements>
        <Crafting>6</Crafting>
      </skillRequirements>
      <recipeUsers>
        <li>TableMachining</li>
      </recipeUsers>
    </recipeMaker>
    <thingSetMakerTags>
      <li>RewardStandardQualitySuper</li>
    </thingSetMakerTags>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <Mass>3.5</Mass>
      <AccuracyTouch>0.66</AccuracyTouch>
      <AccuracyShort>0.77</AccuracyShort>
      <AccuracyMedium>0.72</AccuracyMedium>
      <AccuracyLong>0.61</AccuracyLong>
      <RangedWeapon_Cooldown>1.70</RangedWeapon_Cooldown>
    </statBases>
    <equippedAngleOffset>15</equippedAngleOffset>
    <costList>
      <Steel>60</Steel>
      <ComponentIndustrial>7</ComponentIndustrial>
    </costList>
    <weaponTags>
      <li>pphhyy_M43PulseRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Projectile_ArifleBullet</defaultProjectile>
        <warmupTime>1.0</warmupTime>
        <range>30.9</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>10</ticksBetweenBurstShots>
        <soundCast>pphhyy_PulseRifleSound</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
      <li Class="CompProperties_Styleable"/>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
    <modExtensions>
      <li Class="MuzzleFlash.MuzzleFlashProps" MayRequire="IssacZhuang.MuzzleFlash">
        <def>MF_StandardMuzzleFalshThree</def>
        <drawSize>(0.6,0.6)</drawSize>
        <isAlternately>true</isAlternately>
        <offsets>
          <li>(0.46,0.04)</li>
        </offsets>
      </li>
    </modExtensions>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Projectile_ArifleBullet</defName>
    <label>M4 3Pulse Rifle bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Small</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>15</damageAmountBase>
      <speed>70</speed>
      <armorPenetrationBase>0.35</armorPenetrationBase>
    </projectile>
  </ThingDef>


</Defs>